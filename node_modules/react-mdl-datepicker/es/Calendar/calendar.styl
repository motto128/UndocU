.mdl-card.react-mdl-calendar
    width 250px
    margin auto
    position absolute
    z-index 1000

.mdl-card__title.react-mdl-calendar-title
    color #fff
    background #222d33
    align-items center
    justify-content space-between

.mdl-card__title.react-mdl-calendar-title__date
    margin-right 5px

.mdl-textfield .mdl-button.react-mdl-calendar-title__control
    position relative
    bottom 0

.react-mdl-calendar-table
    width 100%
    border none!important

    .mdl-data-table__cell--non-numeric
        padding 0
        height auto

        &:first-of-type
            padding-left 0

        &:last-of-type
            padding-right 0

.react-mdl-calendar tbody tr
    height auto!important

.react-mdl-calendar-table__head
    padding 0!important
    height auto!important
    text-align center!important

.react-mdl-calendar-table__day
    position: relative !important;
    padding: 0!important;
    min-width: 25px!important;
    height: auto!important;
    bottom: 0!important;

.react-mdl-calendar-footer
    display flex
    justify-content flex-end

.react-mdl-calendar-footer__control
    position relative!important
    bottom 0!important

.selected-day
    color #EF6C00!important

.disable
    opacity: 0.65;
    background: #eee;
    cursor: not-allowed;
    pointer-events: none;